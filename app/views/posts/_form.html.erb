<% @post.tags.build %>
<%= simple_form_for(@post) do |post_form| %>
    <% if @post.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= post_form.input :name %>
    </div>
    <div class="field">
      <%= post_form.input :title %>
    </div>
    <div class="field">
      <%= post_form.input :content %>
    </div>
    <h2>Tags</h2>
    <%= render :partial => 'tags/form',
               :locals => {:form => post_form} %>
    <div class="actions">
      <%= post_form.submit %>
    </div>
<% end %>

